<h2>Log In</h2>

<form method="post" action="/login">

    {{#if errorMessage}}
    <p class="warning">
        {{errorMessage}}
    </p>
    {{/if}}

    <label> Email
        <input type="email" name="email" placeholder="your@email.com" required />
    </label>

    <label> Password
        <input type="password" name="password" placeholder="********" required />
    </label>

    <button type="submit">Log In</button>

</form>