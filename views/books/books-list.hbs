<h1>Books in our DB:</h1>

{{#each books}}
<section class="book-summary">
    <h2>{{this.title}}</h2>
    <p>Author: {{this.author}} </p>
    <p>Rating: {{this.rating}}</p>
    <p><a href="/book-details/{{this._id}}">More details</a></p>
    <p><a href="/book-details/{{this._id}}/update">Update</a></p>
    {{!-- add the form to handle the POST request to remove a specific book --}}
    <form action="/book-details/{{_id}}/delete" method="POST">
        <button>Delete</button>
    </form>
</section>
{{/each}}